{
    "name": "Flashcard",
    "version": "1.0",
    "description": "A Flashcard Extension that quizzes whenever you open a new webpage.",
    "options_page": "options.html",
    "permissions": [
        "declarativeContent",
        "history",
        "tabs",
        "storage"
    ],
    "page_action": {
        "default_popup": "popup_menu.html",
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "background": {
        "scripts": [
            "js/jquery-3.4.1.min.js",
            "background.js"
        ],
        "persistent": true
    },
    "manifest_version": 2
}